<!-- views/roll.erb -->

<!DOCTYPE html>
<html>
  <head>
    <title>Roll View</title>
  </head>

  <body>
    <h1><%=@dice%>d<%=@sides%></h1>
    <p><a href="/process_roll?dice=<%= @dice %>&sides=<%= @sides %>">Roll again</a> | <a href="/">Go back home</a></p>

    <ol>
      <% @rolls.each do |a_roll|%>
        <li><em>Result: </em><strong><%= a_roll %></strong></li>
      <% end %>
    </ol>
  </body>
</html>
